{
  "name": "vue-template",
  "version": "1.0.1",
  "description": "vue3 template",
  "main": "src/main.js",
  "scripts": {
    "build": "yarn build:dev",
    "build:dev": "yarn ver && webpack --node-env development",
    "build:prod": "yarn ver && webpack --node-env production",
    "build:tar": "node bin/archive.js",
    "build:clean": "rimraf dist",
    "watch": "webpack --watch",
    "serve": "webpack serve --node-env development",
    "analyzer": "webpack-bundle-analyzer --port 3000 ./dist/stats.json",
    "lint:css": "stylelint \"src/**/*.{css,scss,vue}\"",
    "fix:css": "stylelint --fix \"src/**/*.{css,scss,vue}\"",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "fix:js": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
    "ver": "node bin/version.js"
  },
  "keywords": [
    "vue3",
    "ts",
    "webpack"
  ],
  "author": "klisit",
  "license": "MIT",
  "dependencies": {
    "@types/webpack-env": "^1.16.0",
    "@vue/compiler-sfc": "^3.0.11",
    "core-js": "^3.10.1",
    "lib-flexible": "^0.3.2",
    "normalize.css": "^8.0.1",
    "vue": "^3.0.11",
    "vue-router": "^4.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@webpack-cli/generators": "^2.0.0",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "browser": "^0.2.6",
    "cache-loader": "^4.1.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "css-loader": "^5.2.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.9.0",
    "file-loader": "^6.2.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "mini-css-extract-plugin": "^1.4.1",
    "node-notifier": "^9.0.1",
    "node-sass": "^5.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss": "^8.2.9",
    "postcss-loader": "^5.2.0",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "^2.2.1",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.4",
    "url-loader": "^4.1.1",
    "vue-loader": "^16.2.0",
    "webpack": "^5.31.2",
    "webpack-bundle-analyzer": "^4.4.1",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  }
}
